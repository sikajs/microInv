<div class="col-xs-12 col-md-8">
<h1>Supplier list</h1>
<p><%= link_to "Add new supplier", new_supplier_path, class: "btn btn-info" %>
Total <%= pluralize @suppliers.count, "supplier" %> </p>
  <div class="table-responsive">
  <%= will_paginate @suppliers, renderer: BootstrapPagination::Rails%>
    <table class="table">
      <tr>
        <th><%= link_to sortable "supplier_id", "Supplier ID" %></th>
        <th><%= link_to sortable "suppl_name", "Supplier name" %></th>
        <th>Tel</th><th>Fax</th>
        <th>Action</th>
      </tr>
      <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.supplier_id%></td>
        <td><%= link_to supplier.suppl_name, supplier_path(supplier)%></td>
        <td><%= supplier.suppl_tel%></td>
        <td><%= supplier.suppl_fax%></td>
        <td>
          <%= link_to "Edit", edit_supplier_path(supplier), class: "btn btn-warning" %>
          <%= link_to "Delete", supplier, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger"%>
        </td>
      </tr>
      <% end %>
    </table>
  <%= will_paginate @suppliers, renderer: BootstrapPagination::Rails%>
  </div>
</div>
