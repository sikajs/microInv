<div id="adjustItemForm" class="col-xs-12 col-md-8">
<h1>Adjust item qty</h1>
<%= form_for(@item, url: { action: "adjust_update"}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <p>
    <%= f.label :item_name %>
    <%= @item.item_name  %>
  </p>
  <p>
    <%= f.label :item_english_name %>
    <%= @item.item_name_en %>
  </p>
  <p>
    <%= f.label :barcode %>
    <%= @item.barcode %>
  </p>
  <p>
    <%= f.label "Current stock" %>
    <%= @item.stock %>
  </p>
  <p>
    <%= f.label "Qty to be changed" %>
    <%= text_field_tag(:qty_to_change) %>
  </p>
  <p>
    <%= f.label "Reason for adjustion" %>
    <%= text_field_tag(:reason) %>
  </p>
  <p>
    <%= f.submit "Save changes", class:"btn btn-primary", data: { confirm: "Are you sure?" }%>
    <%= link_to "Cancel", items_path, class: "btn btn-warning"%>
  </p>
<% end %>
</div>
