<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title" id="myModalLabel">Add New Item</h4>
</div>
<%= form_for(@item) do |f| %>
<div id="newItemFormArea" class="modal-body">

  <%= render 'shared/error_messages' %>
  <p>
    <%= f.label :item_name %>
    <%= f.text_field :item_name  %>
  </p>
  <p>
    <%= f.label :item_english_name %>
    <%= f.text_field :item_name_en %>
  </p>
  <p>
    <%= f.label :supplier %>
  </p>
  <p>
    <%= f.label :unit_cost %>
    <%= f.text_field :unit_cost %>
  </p>
  <p>
    <%= f.label :unit_price %>
    <%= f.text_field :unit_price %>
  </p>
  <p>
    <%= f.label :stock %>
    <%= f.text_field :stock %>
  </p>
  <p>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </p>
  <p>
    <%= f.label :barcode %>
    <%= f.text_field :barcode %>
  </p>

</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <%= f.submit "Create Item", class:"btn btn-primary"%>
</div>
<% end %>
