<div id="newItemForm" class="col-xs-6 col-md-4">
<h1>New Item</h1>
<%= form_for :item do |f| %>
  <p>
    <%= f.label :item_name %>
    <%= f.text_field :item_name %>
  </p>
  <p>
    <%= f.label :item_english_name %>
    <%= f.text_field :name_en %>
  </p>
  <p>
    <%= f.label :supplier %>
    
  </p>
  <p>
    <%= f.label :unit_cost %>
    <%= f.text_field :unit_cost %>
  </p>
  <p>
    <%= f.label :unit_price %>
    <%= f.text_field :unit_price %>
  </p>
  <p>
    <%= f.label :initial_stock %>
    <%= f.text_field :initial_stock %>
  </p>
  <p>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </p>
  <p>
    <%= f.label :barcode %>
    <%= f.text_field :barcode %>
  </p>
  <p>
    <%= f.submit class:"btn btn-primary"%>
  </p>
<% end %>
</div>
