<div id="newCustomerForm" class="col-xs-12 col-md-8">
<h1>Add New Customer</h1>
<%= form_for(@customer) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <p>
    <%= f.label :cust_name %>
    <%= f.text_field :cust_name  %>
  </p>
  <p>
    <%= f.label :cust_tel %>
    <%= f.text_field :cust_tel %>
  </p>
  <p>
    <%= f.label :cust_fax %>
    <%= f.text_field :cust_fax %>
  </p>
  <p>
    <%= f.label :cust_mobile %>
    <%= f.text_field :cust_mobile %>
  </p>
  <p>
    <%= f.label :cust_email %>
    <%= f.text_field :cust_email %>
  </p>
  <p>
    <%= f.label :cust_address %>
    <%= f.text_field :cust_address %>
  </p>
  <p>
    <%= f.submit "Create", class:"btn btn-primary"%>
    <%= link_to "Cancel", customers_path, class: "btn btn-warning"%>
  </p>

<% end %>
</div>
